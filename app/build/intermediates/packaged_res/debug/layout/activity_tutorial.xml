<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    tools:context=".TutorialActivity">

    <Button
        android:id="@+id/btn_continuar"
        android:layout_width="180sp"
        android:layout_height="50dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/diseniobotonaceptar"
        android:text="@string/btn_continuar"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"></Button>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:background="@drawable/disenioformulario"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/tv_omitir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_link_omitir_tutorial"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:textSize="15dp"
        android:translationZ="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_continuar" />

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/diseniocirculo"
        android:translationX="180dp"
        android:translationY="-100dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/diseniocirculo"
        android:translationX="-250dp"
        android:translationY="150dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>